        <div>
          <img src="images/file-text.svg" alt="validiertes jahrbuch" />
          <a href="<%= documents_host%><%= validated %>" target="_blank"><%= pdf_name %></a>
        </div>
  <% }) 
    } 
    if(docs.yearbookArchive){ %>
      <h6 class="documents__title">√Ñltere Jahrb√ºcher:</h6>
      <div>
        <img src="images/file-text.svg" alt="validiertes jahrbuch" />
